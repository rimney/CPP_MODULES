NAME = Harl
CC = c++ -std=c++98
FLAGS = -Wall -Wextra -Werror
SRCS = harl.cpp  main.cpp
all :
	$(CC) $(SRCS) $(FLAGS) -o $(NAME)
clean :
	rm -f $(NAME)
fclean :
	rm -f $(NAME)
re : clean all

