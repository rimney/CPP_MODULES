NAME = Mommy_when_I_grow_up,_I_want_to_be_a_bureaucrat!
SRCS = Bureaucrat.cpp main.cpp
FLAGS = -Wall -Wextra -Werror -std=c++98

all : $(NAME)

$(NAME) : $(SRCS)
	c++ $(FLAGS) $(SRCS) -o $(NAME)
clean :
	rm -f $(NAME)
fclean :
	rm -f $(NAME)
re : fclean all